{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [140],
  "editor.formatOnSave": false,
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  /* Disable this to stop ESLint Output window diagnostics */
  "eslint.trace.server": "messages",

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "search.exclude": {
    "public/**": true,
    "node_modules/**": true,
    "xul/**": true,
    "_dprhtml/js/external/**": true,
  },
}
